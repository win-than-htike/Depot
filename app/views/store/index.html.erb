<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg" id="notice">
      <%= notice %>
    </p>
  <% end %>

  <h1 class="font-bold text-lg mb-6 pb-2 border-b-2">
    Your Pragmatic Catalog
  </h1>

  <% cache @products do %>
    <div class="space-y-4">
      <% @products.each do |product| %>
        <% cache product do %>
          <div class="flex p-6 space-x-6 border rounded-lg shadow-sm">
            <%= image_tag(product.image_url, class: 'object-contain w-40 h-48 shadow') %>

            <div>
              <h2 class="font-bold text-xl">
                <%= product.title %>
              </h2>

              <div class="text-gray-600">
                <%= sanitize(product.description) %>
              </div>

              <div class="text-lg font-bold text-green-600">
                <%= number_to_currency(product.price) %>
              </div>

              <%= button_to "Add to Cart", 
                line_items_path(product_id: product),
                form_class: "inline",
                class: "rounded-lg py-1 px-2 text-white bg-green-600" %>

            </div>
          </div>
        <% end %>
      <% end %>

    </div>

  <% end %>

</div>